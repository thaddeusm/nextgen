<% if current_user.try(:admin?) %>
    <div class="page-header">
        <h1>Student responses</h1>
    </div>
    <% @responses.each do |response| %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">by <%= response.user.name %></h2> 
            </div>
            <div class="panel-body">
                <%= raw(response.body) %>
            </div>
            <div class="panel-footer">
                <% unless response.responses.empty? %>
                    <%= render :partial => 'responses/response', :collection => response.responses %>
                <% end %>
            </div>
        </div>        
    <% end %>
<% else %>
    <div class="jumbotron">
        <h1>Not authorized.</h1>
        <p><%= link_to "Go Back", root_path, class: "btn btn-info" %></p>
    </div>
<% end %>




