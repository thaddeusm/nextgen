<div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1 footer-space">
        <% if user_signed_in? %>
            <div class="page-header headertitle">
                <h1>Feeds</h1>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <% @feeds.each do |feed| %>
                        <div class="jumbotron feed-index-box">
                            <h2 class="textsink">"<%= feed.title %>"</h2>
                            <br>
                            <p>Practice writing <strong><i><%= feed.focus %></i></strong>.</p>
                            <%= link_to "Dive in", feed, class: "btn btn-danger btn-lg" %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% else %>
            <div class="jumbotron">
                <h1>be social</h1>
                <p>read and write with your classmates in a <i>digital space</i></p>
                <p>
                    <%= link_to "Log in", new_user_session_path %> or 
                    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-lg" %>
                </p>
            </div>
        <% end %>
    </div>
</div>