<% if current_user.try(:admin?) %>
    
<% end %>

<div class="page-header">
    <h1><%= @feed.title %></h1>
    <small>by <%= @feed.user.name %></small>
</div>
<div class="well well-sm linkstyle">
    <p>
        <%= raw(@feed.context) %>
    </p>  
</div>

<div class="well well-sm">
    <p>
        <%= simple_format(@feed.prompt) %>
    </p>
</div>


<div class="btn-group btn-group-justified">
    <%= link_to 'Back', feeds_path, class: "btn btn-primary" %>
        <% if current_user.try(:admin?) %>
            <%= link_to 'Edit', edit_feed_path(@feed), class: "btn btn-success" %>
            <%= link_to 'Delete', @feed, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
</div>

<% if @feed.writings %>
    <% @feed.writings.each do |writing| %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">by <%= writing.user.name %></h2> 
            </div>
            <div class="panel-body">
                <%= writing.content %>
            </div>
            <div class="panel-footer">
                <% if writing.user == current_user %>
                    <%= link_to 'Delete', [@feed, writing], method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
            </div>
        </div>
    <% end %>
<% end %>
<br>

<div class="form-group">
    <%= form_for [@feed, @feed.writings.new] do |f| %>
        <%= f.bootsy_area :content, class:"form-control", rows: "4", placeholder: "Begin your response here...", editor_options: { image: false } %>
        <%= f.submit class: "btn btn-success btn-block" %>
    <% end %>
</div>
