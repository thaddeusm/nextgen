<% if current_user.try(:admin?) %>
    
<% end %>

<div class="page-header">
    <h1><%= @feed.title %></h1>
    <small>by <%= @feed.user.name %></small>
</div>
<div class="well well-sm linkstyle">
    <p>
        <%= raw(@feed.context) %>
    </p>  
</div>

<div class="well well-sm">
    <p>
        <%= simple_format(@feed.prompt) %>
    </p>
</div>


<div class="btn-group btn-group-justified">
    <% if current_user.try(:admin?) %>
        <%= link_to 'Back', feeds_path, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_feed_path(@feed), class: "btn btn-success" %>
        <%= link_to 'Delete', @feed, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
</div>

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Write Your Response
</button>


<%= render 'writings' %>


<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= simple_format(@feed.prompt) %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <%= form_for [@feed, @feed.writings.build] do |f| %>
                <%= f.bootsy_area :content, class:"form-control", rows: "4", placeholder: "Write your response here.", editor_options: { image: false, font_styles: false } %>
        </div>
      </div>
      <div class="modal-footer">
          <%= f.submit class: "btn btn-success btn-block" %>
      </div>
    <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->